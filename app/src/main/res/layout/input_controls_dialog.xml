<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/SProfile"
                style="@style/ComboBox"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/BTSettings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_settings"
                app:tint="@color/colorPrimary" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/CBShowTouchscreenControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/show_touchscreen_controls" />

        <CheckBox
            android:id="@+id/CBRelativeMouseMovement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relative_mouse_movement" />

        <CheckBox
            android:id="@+id/CBSimulateTouchScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simulate_touch_screen" />
    </LinearLayout>
</HorizontalScrollView>